<!-- banners -->
{% if section.settings.show_examples %}{% include "color-banner-examples" %}{% endif %}
<section{% unless section.settings.hide_top_indent %} class="content"{% endunless %}>
  <div class="container-fluid box-baners">
    <div class="row">
      {% if section.blocks.size > 0 %}{% assign grid = 12 | divided_by: section.blocks.size %}
      <div class="banner-carousel-1">
        {% for block in section.blocks %}<div class="col-md-{{ grid }} col-sm-6 col-xs-12 class{{ section.id }}{{ forloop.index }}">{% include "color-banner" %}</div>
        {% endfor %}
      </div>
      {% else %}
      <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
      {% endif %}
    </div>
  </div>
</section>
<!-- /banners -->
{% if section.blocks.size > 0 %}
<style>
  {% for block in section.blocks %}
  .class{{ section.id }}{{ forloop.index }} .banner {
    background-color: {{ block.settings.background_color }};
  }
  .class{{ section.id }}{{ forloop.index }} .banner .block-table-cell > span,
  .class{{ section.id }}{{ forloop.index }} .banner .block-table-cell > em {
    color: {{ block.settings.text_color }};
    -webkit-transition:  all 200ms linear 0s;
    -moz-transition:  all 200ms linear 0s;
    -ms-transition:  all 200ms linear 0s;
    -o-transition:  all 200ms linear 0s;
    transition:  all 200ms linear 0s;
  }
  .class{{ section.id }}{{ forloop.index }} .banner .block-table-cell > span.btn {
    border-color: {{ block.settings.text_color }};
  }
  
  .class{{ section.id }}{{ forloop.index }} .banner:hover .block-table-cell > span,
  .class{{ section.id }}{{ forloop.index }} .banner:hover .block-table-cell > em {
    color: {{ section.settings.text_active }} !important;
  }
  .class{{ section.id }}{{ forloop.index }} .banner:hover .block-table-cell > span.btn {
    border-color: {{ section.settings.text_active }} !important;
  }
  .class{{ section.id }}{{ forloop.index }} .banner:hover {
    background-color: {{ section.settings.background_active_color }};
  }
  {% endfor %}
</style>
{% endif %}

