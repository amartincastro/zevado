<section class="content section-indent-bottom{% if section.settings.custombgcolor %} container-fluid fill-bg{% endif %}" data-section-id="{{ section.id }}" data-section-type="brands-section">
  <div class="container">
    <div class="row">
      {% if section.blocks.size > 0 %}
      <div class="brands-carousel brands-carousel-js-{{ section.id }}" data-autoplay="{{ section.settings.module_autoplay }}" data-speed="{{ section.settings.delay_time }}" data-step="{{ section.settings.step }}">
        {% for block in section.blocks %}
        <div>
          <a href="{{ block.settings.link }}">
            {% if block.settings.image != blank %}{% assign img_url = block.settings.image | img_url: 'large' %}
            {% else %}{% assign img_url = 'template_brand.png' | asset_url %}
            {% endif %}
            <img src="{{ img_url }}" alt="{{ block.settings.image.alt }}">
          </a>
        </div>
        {% endfor %}
      </div>
      {% else %}
      <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
      {% endif %}
    </div>
  </div>
</section>
{% if section.settings.custombgcolor or section.settings.custombuttonscolor or section.settings.customopacity %}
<style>
  {% if section.settings.customopacity %}
  [data-section-id~="{{ section.id }}"] .brands-carousel a:hover img {
    -moz-opacity: {{ section.settings.active_opacity }};
    -khtml-opacity: {{ section.settings.active_opacity }};
    -webkit-opacity: {{ section.settings.active_opacity }};
    opacity: {{ section.settings.active_opacity }};
    -ms-filter: progid:DXImageTransform.Microsoft.Alpha(opacity={{ section.settings.active_opacity | times: 100 }});
    filter: alpha(opacity={{ section.settings.active_opacity | times: 100 }});
  }
  [data-section-id~="{{ section.id }}"] .brands-carousel div img, .brands-carousel a img {
    -moz-opacity: {{ section.settings.base_opacity }};
    -khtml-opacity: {{ section.settings.base_opacity }};
    -webkit-opacity: {{ section.settings.base_opacity }};
    opacity: {{ section.settings.base_opacity }};
    -ms-filter: progid:DXImageTransform.Microsoft.Alpha(opacity={{ section.settings.base_opacity | times: 100 }});
    filter: alpha(opacity={{ section.settings.base_opacity | times: 100 }});
  }
  {% endif %}
  {% if section.settings.custombgcolor %}
  [data-section-id~="{{ section.id }}"] {
  background: {{ section.settings.background_color }};
  }
  {% endif %}
  {% if section.settings.custombuttonscolor %}
  [data-section-id~="{{ section.id }}"] .slick-prev,
  [data-section-id~="{{ section.id }}"] .slick-next {
  background-color: {{ section.settings.bg_base_color }};
  }
  [data-section-id~="{{ section.id }}"] .slick-prev:before,
  [data-section-id~="{{ section.id }}"] .slick-next:before {
  color: {{ section.settings.arrow_base_color }};
  }
  [data-section-id~="{{ section.id }}"] .slick-prev:hover,
  [data-section-id~="{{ section.id }}"] .slick-next:hover {
  background-color: {{ section.settings.bg_active_color }};
  }
  [data-section-id~="{{ section.id }}"] .slick-prev:hover:before,
  [data-section-id~="{{ section.id }}"] .slick-next:hover:before {
  color: {{ section.settings.arrow_active_color }};
  }
  {% endif %}
</style>
{% endif %}

