<section class="content{% unless section.settings.top_indent %} nomargin{% endunless %}" data-section-id="{{ section.id }}" data-section-type="collectionslider-section">
  <div class="container">
    <div class="row">
      {% if section.blocks.size > 0 %}
      <div class="category-carousel category-carousel-js-{{ section.id }}" data-autoplay="{{ section.settings.module_autoplay }}" data-speed="{{ section.settings.delay_time }}" data-step="{{ section.settings.step }}">
        {% for block in section.blocks limit: section.blocks.size %}
        <div class="col-sm-4 col-md-4 col-lg-4 block-child{% if section.settings.design == "type2" %} designtype2{% endif %}">
          <a href="{{ block.settings.link }}" class="promo-design3">
            <div>
              {% if block.type == "item_design2" %}
              {% if block.settings.text1 != '' %}<div class="block-title color-base text1color">{{ block.settings.text1 }}</div>{% endif %}
              {% if block.settings.text2 != '' %}<div class="block text-uppercase font-lighter color-dark font-size24 block-top-11 text2color">{{ block.settings.text2 }}</div>{% endif %}
              {% if block.settings.text3 != '' %}<div class="block main-font font-style-italic  font-size16 block-top-23 text3color">{{ block.settings.text3 }}</div>{% endif %}
              {% elsif block.type == "item_design3" %}
              {% if block.settings.text1 != '' %}<div class="block text-uppercase main-font font-size26 color-base font-style-italic text1color">{{ block.settings.text1 }}</div>{% endif %}
              {% if block.settings.text2 != '' %}<div class="block-title  block-top-15 text2color">{{ block.settings.text2 }}</div>{% endif %}
              {% else %}
              {% if block.settings.text1 != '' %}<div class="block-title text1color">{{ block.settings.text1 }}</div>{% endif %}
              {% if block.settings.text2 != '' %}<div class="block text-uppercase font-lighter block-top-11 text2color">{{ block.settings.text2 }}</div>{% endif %}
              {% if block.settings.text3 != '' %}<div class="block color-base main-font font-size46 font-style-italic text3color">{{ block.settings.text3 }}</div>{% endif %}
              {% endif %}
            </div>
          </a>
        </div>
        {% endfor %}
      </div>
      {% else %}
      <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
      {% endif %}
    </div>
  </div>
</section>
<style>
  .category-carousel-js-{{ section.id }} .promo-design3 .block-title {
    font-weight: {{ section.settings.fontweight }};
  }
  .category-carousel-js-{{ section.id }} .promo-design3{
  	border: 1px solid {{ section.settings.color_border }};
  	background: {{ section.settings.color_bg }};
  }
  .category-carousel-js-{{ section.id }} .promo-design3:hover{
	text-decoration: none;
	border: 1px solid {{ settings.color_base }};
  }	
  {% for block in section.blocks limit: section.blocks.size %}{% if block.settings.use_custom_colors == 'yes' %}
  .category-carousel-js-{{ section.id }} .block-child:nth-child({{ forloop.index }}) .promo-design3 .text1color {
    color: {{ block.settings.color_text1 }};
  }
  .category-carousel-js-{{ section.id }} .block-child:nth-child({{ forloop.index }}) .promo-design3 .text2color {
    color: {{ block.settings.color_text2 }};
  }
  .category-carousel-js-{{ section.id }} .block-child:nth-child({{ forloop.index }}) .promo-design3 .text3color {
    color: {{ block.settings.color_text3 }};
  }
  .category-carousel-js-{{ section.id }} .block-child:nth-child({{ forloop.index }}) .promo-design3 {
    background: {{ block.settings.color_bg }};
    border-color: {{ block.settings.color_border }};
  }
  .category-carousel-js-{{ section.id }} .block-child:nth-child({{ forloop.index }}) .promo-design3:hover {
    text-decoration: none;
    border-color: {% if block.settings.color_border == 'rgba(0,0,0,0)' %}{{ block.settings.color_border }}{% else %}{{ block.settings.color_hover }}{% endif %};
  }
  .category-carousel-js-{{ section.id }} .block-child:nth-child({{ forloop.index }}) .promo-design3:hover .text1color,
  .category-carousel-js-{{ section.id }} .block-child:nth-child({{ forloop.index }}) .promo-design3:hover .text2color,
  .category-carousel-js-{{ section.id }} .block-child:nth-child({{ forloop.index }}) .promo-design3:hover .text3color {
    color: {{ block.settings.color_hover }};
  }
  {% endif %}{% endfor %}
  {% for block in section.blocks %}{% if block.settings.image != blank %}
  .category-carousel-js-{{ section.id }} .block-child:nth-child({{ forloop.index }}) .promo-design3 > div {
    background: url({{ block.settings.image | img_url: '600x600' }}) center/100% no-repeat;
  }
  {% endif %}{% endfor %}
</style>

