<section class="content" data-section-id="{{ section.id }}">
  <div class="container">
    {% if section.blocks.size > 0 %}
    <!-- nav-select-item -->
    <ul class="nav-select-item">
      {% for block in section.blocks %}
      <li>
        <a href="{{ block.settings.link }}">
          <span class="icon-clothes icon-clothes-{{ block.settings.icon_number }}"></span>{{- block.settings.item_title -}}
        </a>
      </li>
      {% endfor %}
    </ul>
    <!-- /nav-select-item -->
    {% else %}
    <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
    {% endif %}

    {% if section.settings.show_help %}
    <div style="display: flex; justify-content: center; font-size: 20px; margin-top:20px;">Help With Icons</div>
    <div class="icons-box" style="display: flex; justify-content: center;">
      <span class="icon-clothes icon-clothes-01" style="font-size: 50px;"><span class="icon-number">1</span></span>
      <span class="icon-clothes icon-clothes-02" style="font-size: 50px;"><span class="icon-number">2</span></span>
      <span class="icon-clothes icon-clothes-03" style="font-size: 50px;"><span class="icon-number">3</span></span>
      <span class="icon-clothes icon-clothes-04" style="font-size: 50px;"><span class="icon-number">4</span></span>
      <span class="icon-clothes icon-clothes-05" style="font-size: 50px;"><span class="icon-number">5</span></span>
      <span class="icon-clothes icon-clothes-06" style="font-size: 50px;"><span class="icon-number">6</span></span>
      <span class="icon-clothes icon-clothes-07" style="font-size: 50px;"><span class="icon-number">7</span></span>
      <span class="icon-clothes icon-clothes-08" style="font-size: 50px;"><span class="icon-number">8</span></span>
      <span class="icon-clothes icon-clothes-09" style="font-size: 50px;"><span class="icon-number">9</span></span>
      <span class="icon-clothes icon-clothes-10" style="font-size: 50px;"><span class="icon-number">10</span></span>
    </div>
	{% endif %}

  </div>
</section>
{% if section.settings.show_background %}
<style>
  [data-section-id~="{{ section.id }}"] {
  background: {{ section.settings.color_bg }};
  padding: 60px 0 68px 0;
  {% unless section.settings.top_indent %}margin: 0;{% endunless %}
  }
</style>
{% endif %}

