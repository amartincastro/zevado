  .slidbanner_{{ i }} .link-btn-20:hover,
  .slidbanner_{{ i }} .link-btn-20:hover span {
    {% assign value = "bannercolor_buttontexthover_" | append: i %}
    color: {{ section.settings[value] }} !important;
  }
  .slidbanner_{{ i }} .btn--ys {
    {% assign value1 = "bannercolor_buttontext_" | append: i %}
    {% assign value2 = "bannercolor_buttonbg_" | append: i %}
    color: {{ section.settings[value1] }};
  	background: {{ section.settings[value2] }};
  }
  .slidbanner_{{ i }} .btn--ys:hover, .slidbanner_1 .btn--ys:active, .slidbanner_1 .btn--ys:focus {
    {% assign value1 = "bannercolor_buttontexthover_" | append: i %}
    {% assign value2 = "bannercolor_buttonbghover_" | append: i %}
    color: {{ section.settings[value1] }};
  	background: {{ section.settings[value2] }};
  }
    {% assign value1 = "wrapper_color_" | append: i %}{% if section.settings[value1] %}
    .slidbanner_{{ i }} .wrapper-green {
      background: {{ section.settings[value1] }} !important;
    }{% endif %}
  {% endfor %}
  
  {% for block in section.blocks %}
  [data-section-id~="{{ section.id }}"] .banner{{ forloop.index }} .figcaption .title-1 {
  	color: {{ block.settings.color_text1 }} !important;
  }
  [data-section-id~="{{ section.id }}"] .banner{{ forloop.index }} .figcaption {
  	color: {{ block.settings.color_text2 }} !important;
  }
  [data-section-id~="{{ section.id }}"] .banner{{ forloop.index }} .figcaption .text_sm {
  	color: {{ block.settings.color_text2 }} !important;
  }
  {% endfor %}
