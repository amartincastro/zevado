    color: {{ section.settings[value] }};
  }
  .slidbanner_{{ i }} .link-btn-20,
  .slidbanner_{{ i }} .link-btn-20 span {
    {% assign value = "bannercolor_buttontext_" | append: i %}
    color: {{ section.settings[value] }};
