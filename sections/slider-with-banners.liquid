<section class="content container-fluid box-baners" data-section-id="{{ section.id }}" data-section-type="sliderwithbanners-section">
  <div class="row">
    <!-- col-left -->
    <div class="col-xs-12 col-sm-12 col-md-6">
      {% if section.blocks.size > 0 %}
      <!-- banner-slider -->
      <div class="banner-slider banner-slider-button banner-slider-js-{{ section.id }}" data-autoplay="{{ section.settings.module_autoplay }}" data-speed="{{ section.settings.delay_time }}" data-step="1">
        {% for block in section.blocks %}
        <div>
          <a href="{{ block.settings.link }}" class="banner banner{{ forloop.index }} zoom-in font-size-responsive">
            <span class="figure">
              {% if block.settings.image != blank %}<img src="{{ block.settings.image | img_url: '1024x1024' }}" alt="{{ block.settings.image.alt }}">
              {% else %}<span class="editor-image" data-width="1024" data-height="855"></span>
              {% endif %}
			  {% include "section_slider-with-banners" %}
            </span>
          </a>
        </div>
        {% endfor %}
      </div>
      <!-- /banner-slider -->
      {% else %}
      <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
      {% endif %}
    </div>
    <!-- /col-left -->
    {% assign button_name = section.settings.button_title %}
    <!-- col-right -->
    <div class="col-xs-12 col-sm-12 col-md-6">
      <div class="row">
        <div class="col-sm-6 col-md-6">
          <a href="{{ section.settings.link_1 }}" class="banner zoom-in">
            <span class="figure">
              {% if section.settings.image_1 != blank %}
              <img src="{{ section.settings.image_1 | img_url: 'grande' }}" alt="{{ section.settings.image_1.alt }}">
              {% else %}
              <span class="editor-image" data-width="512" data-height="428" data-position="top"></span>
              {% endif %}
              <span class="figcaption {% if section.settings.position_1 == "left" %}text-left{% endif %}">
                <span class="block-table">
                  <span class="block-table-cell slidbanner_1">
                    {% assign desingtype = section.settings.design_1 %}
                    {% assign show_button = section.settings.show_button_1 %}
                    {% assign title_size = section.settings.title_size_1 %}
                    {% assign text_1 = section.settings.text_1_1 %}
                    {% assign text_2 = section.settings.text_1_2 %}
                    {% assign wrapper = section.settings.wrapper_1 %}
                    {% assign bold = section.settings.text_size_1 %}
                    {% include "section_banner_text" %}
                  </span>
                </span>
              </span>
            </span>
          </a>
        </div>
        <div class="col-sm-6  col-md-6">
          <a href="{{ section.settings.link_2 }}" class="banner zoom-in">
            <span class="figure">
              {% if section.settings.image_2 != blank %}
