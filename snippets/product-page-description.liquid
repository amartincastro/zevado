  {% if sale_on %}
  <span class="price-box__new">{{ product.price_min | money }}</span> <span class="price-box__old">{{ product.compare_at_price_min | money }}</span>
  {% else %}
  <span>{{ product.price_min | money }}</span><span class="price-box__old"></span>
  {% endif %}
